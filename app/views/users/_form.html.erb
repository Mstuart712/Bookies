<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :desc %>
    <%= f.text_field :desc %>
  </div>
  <div class="field">
    <%= f.label :fullname %>
    <%= f.text_field :fullname %>
  </div>
  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :website2 %>
    <%= f.text_field :website2 %>
  </div>
  <div class="field">
    <%= f.label :website3 %>
    <%= f.text_field :website3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
