<h1>Users</h1>
<% @users.each do |u| %> 

<div class="user-div">
<span class="profile-avatar"><a href="/users/<%= u.id
                                      %>">
<%= u.provider == "twitter" ? (image_tag u.pic_url) : (image_tag avatar_url(u)) %></a></span>
<span class="profile-username"><a href="/users/<%= u.id %>"><%= u.username %></a></span>
<span class="profile-fullname"><%= u.fullname %></span>
<span class="profile-fullname"><a href="/bookmarks/user/<%= u.id %>">View bookmarks</a></span>
<% if u.id == session[:user_id] %>
  <span><a href="/users/<%= u.id %>/edit">edit</a></span> 
<% end %>
</div>


<% end %>
